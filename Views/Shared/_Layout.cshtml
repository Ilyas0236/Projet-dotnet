<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hotel Booking</title>

    <!-- Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <!-- Notre CSS personnalisé -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg navbar-dark navbar-custom sticky-top">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <i class="bi bi-building"></i> Hotel Booking
            </a>

            <!-- Bouton mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto align-items-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-house-door"></i> Accueil
                        </a>
                    </li>

                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <!-- Si connecté -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Hotel" asp-action="Index">
                                <i class="bi bi-search"></i> Rechercher
                            </a>
                        </li>

                        @if (User.IsInRole("Client"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Reservation" asp-action="MesReservations">
                                    <i class="bi bi-calendar-check"></i> Mes réservations
                                </a>
                            </li>
                        }

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="Admin" asp-controller="AdminDashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2"></i> Admin
                                </a>
                            </li>
                        }

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle"></i> @User.Identity.Name
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> Mon profil</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Auth" asp-action="Logout">
                                        <i class="bi bi-box-arrow-right"></i> Déconnexion
                                    </a>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <!-- Si non connecté -->
                        <li class="nav-item me-2">
                            <a class="btn btn-outline-light" asp-controller="Auth" asp-action="Login">
                                <i class="bi bi-box-arrow-in-right"></i> Connexion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="btn btn-outline-light" asp-controller="Auth" asp-action="Register">
                                <i class="bi bi-person-plus"></i> Inscription
                            </a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <!-- ALERTES (Success/Error) -->
    @if (TempData["Success"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="bi bi-check-circle-fill me-2"></i>
                @TempData["Success"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="container mt-3">
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @TempData["Error"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        </div>
    }

    <!-- CONTENU PRINCIPAL -->
    <main role="main">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="footer mt-auto">
        <div class="container">
            <div class="row">
                <div class="col-md-6 text-center text-md-start mb-3 mb-md-0">
                    <h5><i class="bi bi-building"></i> Hotel Booking</h5>
                    <p class="mb-0">Réservez votre séjour idéal en quelques clics</p>
                </div>
                <div class="col-md-6 text-center text-md-end">
                    <p class="mb-1">&copy; 2025 Hotel Booking System</p>
                    <p class="mb-0">
                        <a href="#" class="text-white text-decoration-none me-3">
                            <i class="bi bi-facebook"></i>
                        </a>
                        <a href="#" class="text-white text-decoration-none me-3">
                            <i class="bi bi-twitter"></i>
                        </a>
                        <a href="#" class="text-white text-decoration-none">
                            <i class="bi bi-instagram"></i>
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
