@model HotelBookingMVC.Models.Hotel
@{
    ViewData["Title"] = Model.Nom;
}

<!-- IMAGE PRINCIPALE -->
<div class="position-relative" style="height: 400px; overflow: hidden;">
    <img src="@Model.ImagePrincipaleUrl" alt="@Model.Nom"
         style="width: 100%; height: 100%; object-fit: cover;">
    <div class="position-absolute top-0 start-0 w-100 h-100"
         style="background: linear-gradient(180deg, transparent 0%, rgba(0,0,0,0.6) 100%);">
    </div>
    <div class="position-absolute bottom-0 start-0 w-100 p-5 text-white">
        <div class="container">
            <div class="mb-2">
                @for (int i = 0; i < Model.NombreEtoiles; i++)
                {
                    <i class="bi bi-star-fill" style="font-size: 1.5rem; color: var(--secondary);"></i>
                }
            </div>
            <h1 class="display-4 fw-bold">@Model.Nom</h1>
            <p class="fs-5 mb-0">
                <i class="bi bi-geo-alt-fill"></i> @Model.Adresse, @Model.Ville, @Model.Pays
            </p>
        </div>
    </div>
</div>

<!-- DESCRIPTION -->
<div class="container my-5">
    <div class="row">
        <div class="col-lg-8">
            <div class="card card-custom mb-4">
                <div class="card-body p-4">
                    <h3 class="mb-3">
                        <i class="bi bi-info-circle"></i> À propos
                    </h3>
                    <p class="lead">@Model.Description</p>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card card-custom">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="bi bi-clock"></i> Horaires
                    </h5>
                </div>
                <div class="card-body">
                    <p><strong>Check-in :</strong> 15h00</p>
                    <p><strong>Check-out :</strong> 11h00</p>
                    <p class="mb-0"><strong>Réception :</strong> 24h/24</p>
                </div>
            </div>
        </div>
    </div>

    <!-- CHAMBRES DISPONIBLES -->
    <div class="mt-5">
        <h2 class="mb-4">
            <i class="bi bi-door-open"></i> Chambres disponibles
        </h2>

        @if (!Model.Chambres.Any())
        {
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                Aucune chambre disponible pour le moment.
            </div>
        }
        else
        {
            <div class="row g-4">
                @foreach (var chambre in Model.Chambres)
                {
                    <div class="col-md-6 col-lg-4">
                        <div class="card card-custom h-100">
                            <img src="@chambre.ImageUrl" class="card-img-top" alt="@chambre.Type"
                                 style="height: 180px; object-fit: cover;">
                            <div class="card-body d-flex flex-column">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="card-title mb-0">@chambre.Type</h5>
                                    <span class="badge bg-secondary">@chambre.NumeroOuCode</span>
                                </div>

                                <p class="text-muted mb-2">
                                    <i class="bi bi-people"></i> Capacité : @chambre.Capacite personne(s)
                                </p>

                                <p class="card-text flex-grow-1">@chambre.Description</p>

                                <hr>

                                <div class="d-flex justify-content-between align-items-center mb-3">
                                    <span class="text-muted">Prix par nuit</span>
                                    <h4 class="mb-0" style="color: var(--secondary);">@chambre.PrixParNuit.ToString("C")</h4>
                                </div>

                                @if (User.Identity?.IsAuthenticated == true)
                                {
                                    <a asp-controller="Reservation" asp-action="Create"
                                       asp-route-hotelId="@Model.Id" asp-route-chambreId="@chambre.Id"
                                       class="btn btn-primary-custom w-100">
                                        <i class="bi bi-calendar-check"></i> Réserver
                                    </a>
                                }
                                else
                                {
                                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary w-100">
                                        <i class="bi bi-box-arrow-in-right"></i> Connectez-vous pour réserver
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>
