@model IEnumerable<HotelBookingMVC.Models.Hotel>
@{
    ViewData["Title"] = "Rechercher un hôtel";
}

<!-- SECTION RECHERCHE -->
<section class="py-5" style="background: linear-gradient(135deg, var(--primary) 0%, #1e293b 100%);">
    <div class="container">
        <h1 class="text-white text-center mb-4">
            <i class="bi bi-search"></i> Rechercher un hôtel
        </h1>

        <form method="get" asp-action="Index">
            <div class="row g-3">
                <div class="col-md-5">
                    <input type="text" name="recherche" class="form-control form-control-lg"
                           placeholder="Nom de l'hôtel ou mot-clé..."
                           value="@Context.Request.Query["recherche"]" />
                </div>

                <div class="col-md-4">
                    <select name="ville" class="form-select form-select-lg">
                        <option value="">Toutes les villes</option>
                        @foreach (var ville in ViewBag.Villes)
                        {
                            <option value="@ville" selected="@(ville == Context.Request.Query["ville"])">@ville</option>
                        }
                    </select>
                </div>

                <div class="col-md-3">
                    <button type="submit" class="btn btn-secondary-custom btn-lg w-100">
                        <i class="bi bi-search"></i> Rechercher
                    </button>
                </div>
            </div>
        </form>
    </div>
</section>

<!-- LISTE DES HÔTELS -->
<div class="container my-5">
    @if (!Model.Any())
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="bi bi-info-circle fs-1"></i>
            <p class="mt-3 mb-0">Aucun hôtel trouvé pour ces critères.</p>
        </div>
    }
    else
    {
        <div class="row mb-4">
            <div class="col">
                <h3>@Model.Count() hôtel(s) trouvé(s)</h3>
            </div>
        </div>

        <div class="row g-4">
            @foreach (var hotel in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card card-custom h-100">
                        <img src="@hotel.ImagePrincipaleUrl" class="card-img-top" alt="@hotel.Nom" style="height: 200px; object-fit: cover;">
                        <div class="card-body d-flex flex-column">
                            <div class="mb-2">
                                @for (int i = 0; i < hotel.NombreEtoiles; i++)
                                {
                                    <i class="bi bi-star-fill" style="color: var(--secondary);"></i>
                                }
                            </div>
                            <h5 class="card-title">@hotel.Nom</h5>
                            <p class="text-muted mb-2">
                                <i class="bi bi-geo-alt"></i> @hotel.Ville, @hotel.Pays
                            </p>
                            <p class="card-text flex-grow-1">@hotel.Description</p>
                            <div class="mt-3">
                                <a asp-action="Details" asp-route-id="@hotel.Id" class="btn btn-primary-custom w-100">
                                    <i class="bi bi-eye"></i> Voir les chambres
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
