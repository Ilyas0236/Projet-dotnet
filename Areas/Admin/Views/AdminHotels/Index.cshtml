@model IEnumerable<HotelBookingMVC.Models.Hotel>
@{
    ViewData["Title"] = "Gestion des Hôtels";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-building"></i> Gestion des Hôtels (@Model.Count())</h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle"></i> Ajouter un hôtel
    </a>
</div>

<div class="card card-custom">
    <div class="card-body p-0">
        <table class="table table-hover mb-0">
            <thead class="table-light">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Ville</th>
                    <th>Pays</th>
                    <th>Étoiles</th>
                    <th>Statut</th>
                    <th style="width: 200px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>
                            <strong>@item.Nom</strong><br />
                            <small class="text-muted">@item.Adresse</small>
                        </td>
                        <td>@item.Ville</td>
                        <td>@item.Pays</td>
                        <td>
                            @for (int i = 0; i < item.NombreEtoiles; i++)
                            {
                                <i class="bi bi-star-fill text-warning"></i>
                            }
                        </td>
                        <td>
                            @if (item.EstActif)
                            {
                                <span class="badge bg-success">Actif</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Inactif</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                <i class="bi bi-pencil"></i>
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
