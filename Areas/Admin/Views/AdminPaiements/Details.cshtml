@model HotelBookingMVC.Models.Paiement
@{
    ViewData["Title"] = "Détails paiement";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card card-custom mb-3">
            <div class="card-header">
                <h3 class="mb-0">Paiement #@Model.Id</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Date paiement</dt>
                    <dd class="col-sm-8">@Model.DatePaiement.ToString("dd/MM/yyyy HH:mm")</dd>

                    <dt class="col-sm-4">Montant</dt>
                    <dd class="col-sm-8"><strong class="text-success fs-4">@Model.Montant.ToString("C")</strong></dd>

                    <dt class="col-sm-4">Mode de paiement</dt>
                    <dd class="col-sm-8">
                        @if (Model.Mode == "Simule")
                        {
                            <span class="badge bg-info">Simulé</span>
                        }
                        else if (Model.Mode == "Carte")
                        {
                            <span class="badge bg-primary">Carte bancaire</span>
                        }
                        else if (Model.Mode == "PayPal")
                        {
                            <span class="badge bg-warning text-dark">PayPal</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Statut</dt>
                    <dd class="col-sm-8">
                        @if (Model.Statut == "Succes")
                        {
                            <span class="badge bg-success">Succès</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">Échec</span>
                        }
                    </dd>

                    <dt class="col-sm-4">Référence transaction</dt>
                    <dd class="col-sm-8"><code>@Model.ReferenceTransaction</code></dd>
                </dl>

                <hr />

                <h5 class="mb-3">Informations réservation</h5>
                <dl class="row">
                    <dt class="col-sm-4">Réservation</dt>
                    <dd class="col-sm-8">
                        <a asp-controller="AdminReservations" asp-action="Details" asp-route-id="@Model.ReservationId">
                            #@Model.ReservationId
                        </a>
                    </dd>

                    <dt class="col-sm-4">Client</dt>
                    <dd class="col-sm-8">
                        @Model.Reservation.Client.Prenom @Model.Reservation.Client.Nom
                        <br /><small class="text-muted">@Model.Reservation.Client.Email</small>
                    </dd>

                    <dt class="col-sm-4">Hôtel</dt>
                    <dd class="col-sm-8">@Model.Reservation.Hotel.Nom</dd>

                    <dt class="col-sm-4">Dates séjour</dt>
                    <dd class="col-sm-8">
                        Du @Model.Reservation.DateDebut.ToString("dd/MM/yyyy")
                        au @Model.Reservation.DateFin.ToString("dd/MM/yyyy")
                    </dd>

                    <dt class="col-sm-4">Total réservation</dt>
                    <dd class="col-sm-8">@Model.Reservation.Total.ToString("C")</dd>
                </dl>

                <hr />

                <h5 class="mb-3">Chambres réservées</h5>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Chambre</th>
                            <th>Type</th>
                            <th>Prix/nuit</th>
                            <th>Nb nuits</th>
                            <th>Sous-total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var ligne in Model.Reservation.Lignes)
                        {
                            <tr>
                                <td>@ligne.Chambre.NumeroOuCode</td>
                                <td>@ligne.Chambre.Type</td>
                                <td>@ligne.PrixParNuit.ToString("C")</td>
                                <td>@ligne.NbNuits</td>
                                <td>@ligne.SousTotal.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>

                <div class="mt-3">
                    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                    <a asp-controller="AdminReservations" asp-action="Details" asp-route-id="@Model.ReservationId" class="btn btn-primary">
                        Voir la réservation
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
