@model IEnumerable<HotelBookingMVC.Models.Chambre>
@{
    ViewData["Title"] = "Chambres";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Gestion des chambres</h1>

<div class="mb-3">
    <a class="btn btn-primary" asp-area="Admin" asp-controller="AdminChambres" asp-action="Create">
        <i class="bi bi-plus-circle"></i> Ajouter une chambre
    </a>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>Hôtel</th>
            <th>Numéro / Code</th>
            <th>Type</th>
            <th>Capacité</th>
            <th>Prix / nuit</th>
            <th>Active</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Hotel.Nom</td>
                <td>@c.NumeroOuCode</td>
                <td>@c.Type</td>
                <td>@c.Capacite</td>
                <td>@c.PrixParNuit.ToString("C")</td>
                <td>
                    @if (c.EstActive)
                    {
                        <span class="badge bg-success">Oui</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Non</span>
                    }
                </td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-area="Admin" asp-controller="AdminChambres" asp-action="Edit" asp-route-id="@c.Id">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-outline-danger"
                       asp-area="Admin" asp-controller="AdminChambres" asp-action="Delete" asp-route-id="@c.Id">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
