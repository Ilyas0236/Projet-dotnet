@model HotelBookingMVC.Models.Chambre
@{
    ViewData["Title"] = "Ajouter une chambre";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card card-custom">
            <div class="card-header">
                <h3 class="mb-0"><i class="bi bi-plus-circle"></i> Ajouter une chambre</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-area="Admin" asp-controller="AdminChambres">
                    <div asp-validation-summary="All" class="text-danger mb-3"></div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Hôtel</label>
                            <select class="form-select" asp-for="HotelId" asp-items="ViewBag.Hotels">
                                <option value="">-- Sélectionner un hôtel --</option>
                            </select>
                            <span asp-validation-for="HotelId" class="text-danger"></span>
                        </div>
                        <div class="col-md-6">
                            <label asp-for="NumeroOuCode" class="form-label"></label>
                            <input asp-for="NumeroOuCode" class="form-control" />
                            <span asp-validation-for="NumeroOuCode" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-4">
                            <label asp-for="Type" class="form-label"></label>
                            <input asp-for="Type" class="form-control" placeholder="Simple, Double, Suite..." />
                            <span asp-validation-for="Type" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Capacite" class="form-label"></label>
                            <input asp-for="Capacite" class="form-control" type="number" min="1" />
                            <span asp-validation-for="Capacite" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="PrixParNuit" class="form-label"></label>
                            <input asp-for="PrixParNuit" class="form-control" type="number" step="0.01" />
                            <span asp-validation-for="PrixParNuit" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label"></label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <small class="text-muted">URL de l'image (ex: https://...)</small>
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-check mb-3">
                        <input class="form-check-input" asp-for="EstActive" />
                        <label class="form-check-label" asp-for="EstActive">Active</label>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle"></i> Créer
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Annuler</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
