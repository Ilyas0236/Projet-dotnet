@model HotelBookingMVC.Models.Utilisateur
@{
    ViewData["Title"] = "Détails utilisateur";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-8">
        <div class="card card-custom mb-3">
            <div class="card-header">
                <h3 class="mb-0">Profil utilisateur</h3>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Nom complet</dt>
                    <dd class="col-sm-9">@Model.Prenom @Model.Nom</dd>

                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@Model.Email</dd>

                    <dt class="col-sm-3">Rôle</dt>
                    <dd class="col-sm-9">
                        @if (Model.Role == "Admin")
                        {
                            <span class="badge bg-danger">Administrateur</span>
                        }
                        else
                        {
                            <span class="badge bg-info">Client</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Statut</dt>
                    <dd class="col-sm-9">
                        @if (Model.EstActif)
                        {
                            <span class="badge bg-success">Actif</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Inactif</span>
                        }
                    </dd>

                    <dt class="col-sm-3">Date création</dt>
                    <dd class="col-sm-9">@Model.DateCreation.ToString("dd/MM/yyyy HH:mm")</dd>
                </dl>

                <div class="mt-3">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                        <i class="bi bi-pencil"></i> Modifier
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
                </div>
            </div>
        </div>

        @if (ViewBag.Reservations != null && ((List<HotelBookingMVC.Models.Reservation>)ViewBag.Reservations).Any())
        {
            <div class="card card-custom">
                <div class="card-header">
                    <h3 class="mb-0">Historique des réservations</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Hôtel</th>
                                <th>Dates</th>
                                <th>Total</th>
                                <th>Statut</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var r in (List<HotelBookingMVC.Models.Reservation>)ViewBag.Reservations)
                            {
                                <tr>
                                    <td>@r.Id</td>
                                    <td>@r.Hotel.Nom</td>
                                    <td>@r.DateDebut.ToString("dd/MM/yyyy") - @r.DateFin.ToString("dd/MM/yyyy")</td>
                                    <td>@r.Total.ToString("C")</td>
                                    <td>
                                        @if (r.Statut == "EnAttente")
                                        {
                                            <span class="badge bg-warning text-dark">En attente</span>
                                        }
                                        else if (r.Statut == "Confirmee")
                                        {
                                            <span class="badge bg-info">Confirmée</span>
                                        }
                                        else if (r.Statut == "Payee")
                                        {
                                            <span class="badge bg-success">Payée</span>
                                        }
                                        else if (r.Statut == "Terminee")
                                        {
                                            <span class="badge bg-secondary">Terminée</span>
                                        }
                                        else if (r.Statut == "Annulee")
                                        {
                                            <span class="badge bg-danger">Annulée</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        }
    </div>
</div>
