@model IEnumerable<HotelBookingMVC.Models.Utilisateur>
@{
    ViewData["Title"] = "Utilisateurs";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Gestion des utilisateurs</h1>

<div class="mb-3">
    <div class="btn-group" role="group">
        <a class="btn @(string.IsNullOrEmpty(ViewBag.RoleFiltre) ? "btn-primary" : "btn-outline-primary")"
           asp-action="Index">Tous</a>
        <a class="btn @(ViewBag.RoleFiltre == "Client" ? "btn-info" : "btn-outline-info")"
           asp-action="Index" asp-route-role="Client">Clients</a>
        <a class="btn @(ViewBag.RoleFiltre == "Admin" ? "btn-danger" : "btn-outline-danger")"
           asp-action="Index" asp-route-role="Admin">Administrateurs</a>
    </div>
</div>

<table class="table table-striped table-hover align-middle">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Nom complet</th>
            <th>Email</th>
            <th>Rôle</th>
            <th>Actif</th>
            <th>Date création</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model)
        {
            <tr>
                <td>@u.Id</td>
                <td>@u.Prenom @u.Nom</td>
                <td>@u.Email</td>
                <td>
                    @if (u.Role == "Admin")
                    {
                        <span class="badge bg-danger">Admin</span>
                    }
                    else
                    {
                        <span class="badge bg-info">Client</span>
                    }
                </td>
                <td>
                    @if (u.EstActif)
                    {
                        <span class="badge bg-success">Oui</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Non</span>
                    }
                </td>
                <td>@u.DateCreation.ToString("dd/MM/yyyy")</td>
                <td class="text-end">
                    <a class="btn btn-sm btn-outline-info"
                       asp-action="Details" asp-route-id="@u.Id" title="Détails">
                        <i class="bi bi-eye"></i>
                    </a>
                    <a class="btn btn-sm btn-outline-secondary"
                       asp-action="Edit" asp-route-id="@u.Id" title="Modifier">
                        <i class="bi bi-pencil"></i>
                    </a>
                    <a class="btn btn-sm btn-outline-danger"
                       asp-action="Delete" asp-route-id="@u.Id" title="Supprimer">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Aucun utilisateur trouvé.
    </div>
}
